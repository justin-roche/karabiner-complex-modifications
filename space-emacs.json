{
    "title": "space -> ctrl (emacs)",
    "rules": [
        {
            "description": "space -> ctrl (emacs)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "Emacs"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
